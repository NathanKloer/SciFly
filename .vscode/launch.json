    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Local Server",
        "program": "${workspaceFolder}/server.js"
      },
      {
        "type": "node",
        "request": "attach",
        "name": "Attach Local Server",
        "port": 6860
      },
        {
            "type": "node",
            "request": "launch",
            "name": "Seed Database",
            "program": "${workspaceFolder}/scripts/seedProductsDB.js"
      },
        {
          "name": "Chrome",
          "type": "chrome",
          "request": "launch",
          "url": "http://localhost:3000",
          "webRoot": "${workspaceRoot}/src"
      }
    ]
}
